Ti.UI.setBackgroundColor("#000");

//Background
var mainWindow = Ti.UI.createWindow({
	backgroundColor: "#323232"
});

//Main Buttons
var mainButton = Ti.UI.createView({
	backgroundColor: "#fff",
	top: 30,
	height: 100,
	width: 300,
	borderRadius:8
});


//Main Button Text 
var mainButtonText = Ti.UI.createLabel({
		text: "Energy No Limit",
		textAlign: "center",
		font: {fontSize: 20, fontFamily:"Helvetica", fontWeight: "bold"}
});


////NAVIGATION WINDOWS
	
	var win2 = Titanium.UI.createWindow({
    backgroundColor: 'red',
    title: 'Red Window'
});

var win1 = Titanium.UI.iOS.createNavigationWindow({
   window: win2
});

var win3 = Titanium.UI.createWindow({
    backgroundColor: 'blue',
    title: 'Blue Window'
});

var button = Titanium.UI.createButton({
    title: 'Open Blue Window'
});
button.addEventListener('click', function(){
    win1.openWindow(win3, {animated:true});
});

win2.add(button);
var button2 = Titanium.UI.createButton({
    title: 'Close Blue Window'
});
button2.addEventListener('click', function(){
    win1.closeWindow(win3, {animated:false}); //win3.close() will also work!!
});



//MAIN CODE	
//Loading imagelayout.js file
//var loadfile = require("imagelayout");


mainWindow.add(mainButton);
mainButton.add(mainButtonText);
mainWindow.open();
win3.add(button2);
win1.open();